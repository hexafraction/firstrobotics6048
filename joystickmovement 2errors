#include "JoystickDriver.c";
task main()
{
  while(true)
	{
		getJoystickSettings(joystick);

		if (joystick.joy1_TopHat==1)
			{
				motor[motorD] = 75;
			}
		if (joystick.joy1_TopHat==4)
			{
				motor[motorD] = -75;
			}
		if (joy1btn(3)==1)
			{
				motor[motorD] = 75;
			}
		if (joy1Btn(1)==1)
			{
				motor[motorD] = -75;
			}


	/*shoulder of arm (controlled by triggers)*/

		if (joy1Btn(7)==1)
			{
				motor[motorF]=100;
			}
		else
			{
				motor[motorF]=0;

		if (joy1Btn(6)==1)
			{
				motor[motorF]=-100;
			}
		else
			{
				motor[motorF]=0;


	/*elbow of arm (controlled by d pad)*/
		servo[leftservo]=joystick.joy1_y1;
	  servo[rightservo]=joystick.joy1_y1;


		/*wrist of arm(controlled by Y and A)*/
		servo[topservo]=joystick.joy1_y2;

	}


}
